@page "/GeneralFTL_Advanced"

@inject IJSRuntime JSRuntime
@inject TranslateText TransText

@using PearlCalculatorBlazor.Localizer


<Space Direction="DirectionVHType.Vertical" Style="width: 100%">
    <SpaceItem>
        <Card Title="@TranslateText.GetTranslateText("Offset")" Style="width: 100%">
            <Space Direction="DirectionVHType.Vertical" Style="width: 100%">
                <SpaceItem>
                    <Space Direction="DirectionVHType.Vertical" Style="width: 100%">
                        <SpaceItem>
                            <Text>X :</Text>
                        </SpaceItem>
                        <SpaceItem>
                            <InputNumber Style="width: 100%" Min="-1" Max="1" @bind-Value="@PearlOffsetX" Size="@InputSize.Default"/>
                        </SpaceItem>
                    </Space>
                </SpaceItem>
                <SpaceItem>
                    <Space Direction="DirectionVHType.Vertical" Style="width: 100%">
                        <SpaceItem>
                            <Text>Z :</Text>
                        </SpaceItem>
                        <SpaceItem>
                            <InputNumber Style="width: 100%" Min="-1" Max="1" @bind-Value="@PearlOffsetZ" Size="@InputSize.Default"/>
                        </SpaceItem>
                    </Space>
                </SpaceItem>
            </Space>
        </Card>
    </SpaceItem>
    <SpaceItem>
        <Card Title="@TranslateText.GetTranslateText("ResultSortControl")" Style="width: 100%">
            <Space Direction="DirectionVHType.Vertical" Style="width: 100%">
                <SpaceItem>
                    <Space Style="width: 100%; justify-content: space-between;">
                        <SpaceItem>
                            <Text>@TranslateText.GetTranslateText("TNTWeight")</Text>
                        </SpaceItem>
                        <SpaceItem Style="width: 75%">
                            <Slider Style="width: 100%" TValue="double" Min="0" Max="100" DefaultValue="0" TipFormatter="@(value => $"{value}%")" @bind-Value="@TNTWeight" Id="tnt-weight-slider"/>
                        </SpaceItem>
                    </Space>
                </SpaceItem>
                <SpaceItem>
                    <RadioGroup @bind-Value="@SelectSortMode" Style="width: 100%;">
                        <Space Style="width: 100%; justify-content: space-between;">
                            <SpaceItem>
                                <Radio Value="@SortMode.SortByWeightedDistance">
                                    @TranslateText.GetTranslateText("MixedWeightedDistance")
                                </Radio>
                            </SpaceItem>
                            <SpaceItem>
                                <Radio Value="@SortMode.SortByWeightedTotal">
                                    @TranslateText.GetTranslateText("MixedWeightedTotal")
                                </Radio>
                            </SpaceItem>
                        </Space>
                    </RadioGroup>
                </SpaceItem>
            </Space>
        </Card>
    </SpaceItem>
</Space>