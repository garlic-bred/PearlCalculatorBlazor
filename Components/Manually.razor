@page "/Manually"
@inject MessageService AntMessage
@inject NotificationService Notice
@inject TranslateText TransText

@using PearlCalculatorBlazor.Localizer

<div style="
        border-style: solid;
        border-Color: #f0f0f0;
        border-width: 1px;
        border-radius: 2px;
        line-height: 1.2;
        padding: 20px 19px 24px 19px;
    ">

    <Row Class="manually-row">
        <AntDesign.Col Span="12" Class="manually-name-value-box">
            @TranslateText.GetTranslateText("PearlPosX")
        </AntDesign.Col>

        <AntDesign.Col Span="12" Class="manually-name-value-box">
            @TranslateText.GetTranslateText("MomentumX")
        </AntDesign.Col>
    </Row>

    <Row Class="manually-row">
        <AntDesign.Col Span="12" Class="manually-name-value-box">
            <InputNumber Class="manually-input-container-box" @bind-Value="@ManuallyPearlPosX" />
        </AntDesign.Col>

        <AntDesign.Col Span="12" Class="manually-name-value-box">
            <InputNumber Class="manually-input-container-box" @bind-Value="@ManuallyPearlMomentumX" />
        </AntDesign.Col>
    </Row>

    <Row Class="manually-row">
        <AntDesign.Col Span="12" Class="manually-name-value-box">
            @TranslateText.GetTranslateText("PearlPosY")
        </AntDesign.Col>

        <AntDesign.Col Span="12" Class="manually-name-value-box">
            @TranslateText.GetTranslateText("MomentumY")
        </AntDesign.Col>
    </Row>

    <Row Class="manually-row">
        <AntDesign.Col Span="12" Class="manually-name-value-box">
            <InputNumber Class="manually-input-container-box" @bind-Value="@ManuallyPearlPosY" />
        </AntDesign.Col>

        <AntDesign.Col Span="12" Class="manually-name-value-box">
            <InputNumber Class="manually-input-container-box" @bind-Value="@ManuallyPearlMomentumY" />
        </AntDesign.Col>
    </Row>

    <Row Class="manually-row">
        <AntDesign.Col Span="12" Class="manually-name-value-box">
            @TranslateText.GetTranslateText("PearlPosZ")
        </AntDesign.Col>

        <AntDesign.Col Span="12" Class="manually-name-value-box">
            @TranslateText.GetTranslateText("MomentumZ")
        </AntDesign.Col>
    </Row>

    <Row Class="manually-row">
        <AntDesign.Col Span="12" Class="manually-name-value-box">
            <InputNumber Class="manually-input-container-box" @bind-Value="@ManuallyPearlPosZ" />
        </AntDesign.Col>

        <AntDesign.Col Span="12" Class="manually-name-value-box">
            <InputNumber Class="manually-input-container-box" @bind-Value="@ManuallyPearlMomentumZ" />
        </AntDesign.Col>
    </Row>

    <Row Class="manually-row">
        <AntDesign.Col Span="12" Class="manually-name-value-box">
            @TranslateText.GetTranslateText("TNTXA")
        </AntDesign.Col>

        <AntDesign.Col Span="12" Class="manually-name-value-box">
            @TranslateText.GetTranslateText("TNTXB")
        </AntDesign.Col>
    </Row>

    <Row Class="manually-row">
        <AntDesign.Col Span="12" Class="manually-name-value-box">
            <InputNumber Class="manually-input-container-box" @bind-Value="@ATNTX" />
        </AntDesign.Col>

        <AntDesign.Col Span="12" Class="manually-name-value-box">
            <InputNumber Class="manually-input-container-box" @bind-Value="@BTNTX" />
        </AntDesign.Col>
    </Row>

    <Row Class="manually-row">
        <AntDesign.Col Span="12" Class="manually-name-value-box">
            @TranslateText.GetTranslateText("TNTYA")
        </AntDesign.Col>

        <AntDesign.Col Span="12" Class="manually-name-value-box">
            @TranslateText.GetTranslateText("TNTYB")
        </AntDesign.Col>
    </Row>

    <Row Class="manually-row">
        <AntDesign.Col Span="12" Class="manually-name-value-box">
            <InputNumber Class="manually-input-container-box" @bind-Value="@ATNTY" />
        </AntDesign.Col>

        <AntDesign.Col Span="12" Class="manually-name-value-box">
            <InputNumber Class="manually-input-container-box" @bind-Value="@BTNTY" />
        </AntDesign.Col>
    </Row>

    <Row Class="manually-row">
        <AntDesign.Col Span="12" Class="manually-name-value-box">
            @TranslateText.GetTranslateText("TNTZA")
        </AntDesign.Col>

        <AntDesign.Col Span="12" Class="manually-name-value-box">
            @TranslateText.GetTranslateText("TNTZB")
        </AntDesign.Col>
    </Row>

    <Row Class="manually-row">
        <AntDesign.Col Span="12" Class="manually-name-value-box">
            <InputNumber Class="manually-input-container-box" @bind-Value="@ATNTZ" />
        </AntDesign.Col>

        <AntDesign.Col Span="12" Class="manually-name-value-box">
            <InputNumber Class="manually-input-container-box" @bind-Value="@BTNTZ" />
        </AntDesign.Col>
    </Row>

    <Row Class="manually-row">
        <AntDesign.Col Span="12" Class="manually-name-value-box">
            @TranslateText.GetTranslateText("AmountA")
        </AntDesign.Col>

        <AntDesign.Col Span="12" Class="manually-name-value-box">
            @TranslateText.GetTranslateText("AmountB")
        </AntDesign.Col>
    </Row>

    <Row Class="manually-row">
        <AntDesign.Col Span="12" Class="manually-name-value-box">
            <InputNumber Class="manually-input-container-box" @bind-Value="@ATNTAmount" />
        </AntDesign.Col>

        <AntDesign.Col Span="12" Class="manually-name-value-box">
            <InputNumber Class="manually-input-container-box" @bind-Value="@BTNTAmount" />
        </AntDesign.Col>
    </Row>

    <Row Class="manually-row">
        <AntDesign.Col Span="24" Class="manually-name-value-box">
            @TranslateText.GetTranslateText("DestinationX")
        </AntDesign.Col>
    </Row>

    <Row Class="manually-row">
        <AntDesign.Col Span="24" Class="manually-name-value-box">
            <InputNumber Class="manually-input-container-box" @bind-Value="@ManuallyDestinationX" />
        </AntDesign.Col>
    </Row>

    <Row Class="manually-row">
        <AntDesign.Col Span="24" Class="manually-name-value-box">
            @TranslateText.GetTranslateText("DestinationZ")
        </AntDesign.Col>
    </Row>

    <Row Class="manually-row">
        <AntDesign.Col Span="24" Class="manually-name-value-box">
            <InputNumber Class="manually-input-container-box" @bind-Value="@ManuallyDestinationZ" />
        </AntDesign.Col>
    </Row>

    <Row>
        <AntDesign.Col Span="12" Style="height: 12px"></AntDesign.Col>
    </Row>

    <ul class="calculator-manually-btn-group">
        <li style="margin-bottom:5px;">
            <Button Style="width: 100%" @onclick="@ManuallyCalculateTNTAmount">@TranslateText.GetTranslateText("CalculateTNTAmount")</Button>
        </li>

        <li style="margin-bottom:5px;">
            <Button Style="width: 100%" @onclick="@(() => ManuallyCalculatePearl("trace"))">@TranslateText.GetTranslateText("CalculatePearlTrace")</Button>
        </li>

        <li style="margin-bottom:5px;">
            <Button Style="width: 100%" @onclick="@(() => ManuallyCalculatePearl("motion"))">@TranslateText.GetTranslateText("CalculatePearlMomentum")</Button>
        </li>
    </ul>
</div>

<style>
    .manually-name-value-box {
        align-content: center;
        Padding: 6px 8px;
    }

    .manually-input-container-box {
        width: 100%;
    }

    ul.calculator-manually-btn-group {
        list-style: none;
        padding: 8px 18px 0 18px;
    }
</style>

