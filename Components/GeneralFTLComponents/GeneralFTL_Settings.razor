        height: 32px;
    }

    .setting-check-box {
        left: 4%;
        top: 0px;
        bottom: 0px;
    }

    .setting-name-value-box {
        border-right-style: solid;
        border-Color: #f0f0f0;
        border-right-width: 1px;
