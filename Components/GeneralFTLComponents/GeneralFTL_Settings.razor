    <Row Class="setting-row">
        <AntDesign.Col Span="12" Class="setting-name-value-box" Style="Padding: 4px 8px">
        <Tooltip Placement="PlacementType.TopLeft" Title="@("Preset the position of the TNT duped from the red array relative to the pearl without being changed by the slime block")">
            <span> Default Red TNT Position</span>
        </Tooltip>
        </AntDesign.Col>

        <AntDesign.Col Span="12" Style="Padding: 2px 8px">
        <Select DataSource="@Red_list"
                @bind-Value="@DefaultRedTNTPosition"
                DefaultValue="@("SouthEast")"
                ValueName="@nameof(ArrayPos.Name)"
                LabelName="@nameof(ArrayPos.Value)"
                Size="@InputSize.Small"
                Style="width: 85%;">
        </Select>
        </AntDesign.Col>
    </Row>

    <Row Class="setting-row">
        <AntDesign.Col Span="12" Class="setting-name-value-box" Style="Padding: 4px 8px;">
        <Tooltip Placement="PlacementType.TopLeft" Title="@("Preset the position of the TNT duped from the blue array relative to the pearl without being changed by the slime block")">
            <span> Default Blue TNT Position</span>
        </Tooltip>
        </AntDesign.Col>

        <AntDesign.Col Span="12" Style="Padding: 2px 8px;">
        <Select DataSource="@Blue_list"
                @bind-Value="@DefaultBlueTNTPosition"
                DefaultValue="@("NorthWest")"
                ValueName="@nameof(ArrayPos.Name)"
                LabelName="@nameof(ArrayPos.Value)"
                Size="@InputSize.Small"
                Style="width: 85%;">
        </Select>
        </AntDesign.Col>
    </Row>
    <Row>
        <AntDesign.Col Span="12" Style="border-right-style: solid; border-Color: #f0f0f0; border-right-width: 1px; height:8px"></AntDesign.Col>
    </Row>
</div>
<br />
<li style="padding: 0px 10px 0px 10px">
    <Button Style="width: 100%" @onclick="@ResetToDefault_OnClick">Reset To Default</Button>
</li>

